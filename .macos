#!/usr/bin/env bash

# Set a blazingly fast keyboard repeat rate
defaults write NSGlobalDomain KeyRepeat -int 1
defaults write NSGlobalDomain InitialKeyRepeat -int 10

# Show hidden files in Finder
defaults write com.apple.finder AppleShowAllFiles YES
killall Finder

# iTerm2

# Specify the preferences directory
defaults write com.googlecode.iterm2.plist PrefsCustomFolder -string "$(dirname "$0")/iterm2"
# Tell iTerm2 to use the custom preferences in the directory
defaults write com.googlecode.iterm2.plist LoadPrefsFromCustomFolder -bool true

defaults write com.googlecode.iterm2 AlternateMouseScroll -bool true


mkdir -p "$HOME/Screenshots"
defaults write com.apple.screencapture location "$HOME/Screenshots"
defaults write com.apple.screencapture type -string jpg
defaults write com.apple.iphonesimulator ScreenshotSaveLocation -string "$HOME/Screenshots"
killall SystemUIServer

# Copy the workflow to the system's Folder Actions directory where Automator saves workflows by default
# This makes it available in Folder Actions Setup for attaching to folders
mkdir -p "$HOME/Library/Workflows/Applications/Folder Actions/"
cp -R "$(dirname "$0")/compress-videos.workflow" "$HOME/Library/Workflows/Applications/Folder Actions/"
# Restart Folder Actions to pick up the new workflow
killall "Folder Actions Setup" 2>/dev/null || true
killall "System Events" 2>/dev/null || true
