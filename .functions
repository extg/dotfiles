function gclone() {
  DIR="$(basename "$1" ".git")";
  if [[ -n $2 ]]; then
    DIR="$2";
  fi;

  git clone "$@" && cd "$DIR" || exit
}

# grmtag v1.0.0
function grmtag() {
	git tag -d "$1"
	git push origin ":refs/tags/$1"
}

# smartresize inputfile.png 300 outputdir/
# https://www.smashingmagazine.com/2015/06/efficient-image-resizing-with-imagemagick/
function smartresize() {
   mogrify \
     -path "$3" -filter Triangle \
     -define "filter:support=2" \
     -thumbnail "$2" \
     -unsharp "0.25x0.08+8.3+0.045" \
     -dither None \
     -posterize 136 \
     -quality 82 \
     -define "jpeg:fancy-upsampling=off" \
     -define "png:compression-filter=5" \
     -define "png:compression-level=9" \
     -define "png:compression-strategy=1" \
     -define "png:exclude-chunk=all" \
     -interlace none \
     -colorspace sRGB "$1"
}

# fingerprint ~/.ssh/id_rsa
function fingerprint() {
    ssh-keygen -lf "$1" -E md5
}

# https://stackoverflow.com/questions/3964068/zsh-automatically-run-ls-after-every-cd
function chpwd() {
  # emulate -L zsh
  ls -lrthG
}

# Configure git in the current project with the specified SSH key, user.name, and user.email
function gconf() {
  if [ $# -lt 2 ]; then
    echo "Usage: gconf <ssh_key_path> <user_name> [user_email]"
    return 1
  fi
  local ssh_key_path="$1"
  local user_name="$2"
  local user_email
  if [ -n "$3" ]; then
    user_email="$3"
  else
    user_email="${user_name}@users.noreply.github.com"
  fi

  git config user.name "$user_name"
  git config user.email "$user_email"
  git config core.sshCommand "ssh -i $ssh_key_path -o IdentitiesOnly=yes"

  printf "\nGit local config set:\n"
  printf "user.name:       %s\n" "$(git config --get user.name)"
  printf "user.email:      %s\n" "$(git config --get user.email)"
  printf "core.sshCommand: %s\n" "$(git config --get core.sshCommand)"
}

# Base64 encode a string or file
# Usage: b64encode "string" or b64encode < file.txt or echo "string" | b64encode
function b64encode() {
  if [ $# -eq 0 ]; then
    # Read from stdin if no arguments provided
    base64
  else
    # Encode the provided string
    printf '%s' "$1" | base64
  fi
}

# Base64 decode a string or file
# Usage: b64decode "encoded_string" or b64decode < encoded_file.txt or echo "encoded_string" | b64decode
function b64decode() {
  if [ $# -eq 0 ]; then
    # Read from stdin if no arguments provided
    base64 -d
  else
    # Decode the provided string
    printf '%s' "$1" | base64 -d
  fi
}
